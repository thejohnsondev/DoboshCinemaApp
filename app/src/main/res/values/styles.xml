<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color_light</item>
    </style>

    <style name="HeaderText1">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
    </style>

    <style name="HeaderText2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TaglineText">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/gray_middle</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DescriptionText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GenreText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBarMini" parent="Widget.AppCompat.RatingBar.Small" />

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RoundedCornerStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_12</item>

    </style>

    <style name="ActionInMovieDetailsButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/RoundedCornerStyle</item>
        <item name="backgroundTint">@color/genre_color_red</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>